---
import { Footer, FooterCopyright, FooterLinkGroup, FooterBrand, FooterLink } from 'flowbite-svelte';
import Navbar from "@islands/navbar/Navbar.svelte";
import ConsoleLoader from "@islands/console/ConsoleLoader.svelte";
import { ViewTransitions } from "astro:transitions";

interface Props {
    title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
    </head>

    <body class="bg-white dark:bg-gray-900">
        <Navbar client:load transition:persist="navbar" transition:persist-props />
        <ConsoleLoader client:only="svelte" transition:persist="console" transition:persist-props />
        <div id="home-slot" class="container mx-auto">
            <slot name="home" />
        </div>
        <div id="main-slot" class="container mx-auto">
            <slot/>
        </div>
        <Footer footerType="logo" class="sm:shadow-none">
            <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
            <div class="sm:flex sm:items-center sm:justify-center">
                <FooterLinkGroup ulClass="flex flex-wrap items-center mb-6 text-sm text-gray-500 sm:mb-0 dark:text-gray-400">
                    <FooterLink href="https://www.edger.dev/" target="_blank">
                        <div class="flex flex-row place-items-end">
                        <img src="https://www.edger.dev/icon.svg" class="w-5 h-5 me-1"/>
                        <span class="mb-0.5 me-4">edger.dev</span>
                        </div>
                    </FooterLink>
                    <FooterLink href="/about.html">About</FooterLink>
                    <FooterLink href="https://www.edger.dev/contact.html" target="_blank">Contact</FooterLink>
                </FooterLinkGroup>
            </div>
        </Footer>
    </body>
</html>
